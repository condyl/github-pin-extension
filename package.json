{
  "name": "github-pin",
  "version": "0.1.0",
  "description": "Chrome extension that adds a pinned repositories section to GitHub sidebar.",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "vite build && vite build --config vite.background.config.ts",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "chrome-extension",
    "github",
    "manifest-v3"
  ],
  "devDependencies": {
    "@types/chrome": "^0.1.18",
    "@types/node": "^22.13.10",
    "jsdom": "^26.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  }
}
